<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="179dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pet" />

            <TextView
                android:id="@+id/tvtext5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit user profile information"
                android:layout_marginBottom="10dp"
                android:textColor="#9C7DA5"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnInsert_image"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Select a new profile image"
                android:textColor="#9C7DA5" />

            <EditText
                android:id="@+id/etEName"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Name"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etEBio"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Bio"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etEPet_type"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Pet type:"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etEPet_breed"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Pet breed: "
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etEPet_gender"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Pet gender:"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etEzip"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Zip code: "
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <TextView
                android:id="@+id/tvEPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User Preferences"
                android:layout_marginBottom="10dp"
                android:textColor="#9C7DA5"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/etEPreference_type"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Pet type"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/etEPreference_breed"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="New Pet breed"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/etEPreference_gender"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5"
                android:background="@drawable/round_text"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:hint="New Pet gender"
                android:inputType="textPersonName"
                />

            <EditText
                android:id="@+id/etEPreference_other"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:paddingLeft="15dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Other"

                android:textColorHint="#9C7DA5"
                android:inputType="textPersonName"
                />

            <Button
                android:id="@+id/btnEProfile_save"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Save"
                android:textColor="#9C7DA5" />



            <TextView
                android:id="@+id/btnBackA"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:ems="3"
                android:focusable="true"
                android:paddingHorizontal="15dp"
                android:text="Back"
                android:textColor="#A8A8A8"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>