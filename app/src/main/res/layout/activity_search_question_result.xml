<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Profile">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pet" />

            <TextView
                android:id="@+id/bntP_resultP"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Searching result:"
                android:textColor="#9C7DA5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/etsearchResult1"
                android:layout_width="350dp"
                android:layout_height="354dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#FEF9E7"
                android:ems="10"
                android:paddingLeft="5dp"
                android:paddingTop="11dp"
                android:text="@string/q1"
                android:textColor="#9C7DA5"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/btnBackRS"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:ems="3"
                android:focusable="true"
                android:paddingHorizontal="15dp"
                android:text="Back"
                android:textColor="#A8A8A8"
                android:textSize="20dp" />


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>