<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pet" />


            <TextView
                android:id="@+id/friendsrequest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/user_information"
                android:textColor="#9C7DA5"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/user_imageViewrequest1"
                android:layout_width="293dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:contentDescription="User image" />

            <TextView
                android:id="@+id/etNameViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"
                android:paddingTop="11dp"/>

            <TextView
                android:id="@+id/etBioViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Bio"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"
                android:paddingTop="11dp"/>

            <TextView
                android:id="@+id/etPet_typeViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet type:"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"
                android:paddingTop="11dp"/>

            <TextView
                android:id="@+id/etPet_breedViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet breed: "
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"
                android:paddingTop="11dp"/>

            <TextView
                android:id="@+id/etPet_genderViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet gender:"
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"
                android:paddingTop="11dp"/>

            <TextView
                android:id="@+id/etzipViewrequest1"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Zip code: "
                android:paddingLeft="15dp"
                android:paddingTop="11dp"
                android:textColor="#9C7DA5"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btndeletefriend1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Delete Friend"
                android:textColor="#9C7DA5" />


            <Button
                android:id="@+id/reportuser1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Report user"
                android:textColor="#9C7DA5" />

            <TextView
                android:id="@+id/btnBackrequest1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:ems="3"
                android:focusable="true"
                android:paddingHorizontal="15dp"
                android:text="Back"
                android:textColor="#A8A8A8"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>