<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/bntP_resultP"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Which post would you like to delete?"
            android:textColor="#9C7DA5"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/enterNumber1"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/round_text"
            android:ems="10"
            android:hint="Enter the post number here "
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:paddingLeft="14dp"
            android:textColorHint="#9C7DA5" />


        <Button
            android:id="@+id/btndelete"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/round_text"
            android:backgroundTint="#ADC1FC"
            android:layout_marginBottom="20dp"
            android:ems="15"
            android:text="Delete"
            android:textColor="#9C7DA5"
            android:textSize="18dp"
            />

        <ListView
            android:id="@+id/etallPost1"
            android:text="@string/q1"
            android:layout_width="350dp"
            android:layout_height="510dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_text"
            android:backgroundTint="#FEF9E7"
            android:ems="10"
            android:paddingLeft="5dp"
            android:textColor="#9C7DA5"
            android:textSize="15dp"
            android:paddingTop="11dp"/>


        <TextView
            android:id="@+id/btnBackaaa"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:clickable="true"
            android:ems="3"
            android:focusable="true"
            android:paddingHorizontal="15dp"
            android:text="Back"
            android:textColor="#A8A8A8"
            android:textSize="20dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>