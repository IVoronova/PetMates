<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Profile">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/bntP_resultP"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="User Report Record"
                android:textColor="#9C7DA5"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ListView
                android:id="@+id/etallQuestion"
                android:text="@string/q1"
                android:layout_width="350dp"
                android:layout_height="630dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#FEF9E7  "
                android:ems="10"
                android:hint="Q:\nA:"
                android:paddingLeft="15dp"
                android:textColor="#9C7DA5"
                android:textSize="15dp"
                android:paddingTop="11dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/btnBackadR"
            android:layout_width="100dp"
            android:layout_height="66dp"
            android:clickable="true"
            android:ems="3"
            android:focusable="true"
            android:paddingHorizontal="15dp"
            android:text="Back"
            android:textColor="#A8A8A8"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/viewforumreport"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:ems="3"
            android:layout_marginLeft="100dp"
            android:focusable="true"
            android:text="View forum report"
            android:textColor="#9C7DA5"
            android:textSize="20dp" />
    </LinearLayout>


        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>