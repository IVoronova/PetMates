<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-153dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/pet" />

            <TextView
                android:id="@+id/tvtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:text="Complete User Profile"
                android:textColor="#9C7DA5"
                android:textSize="25sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnEdit_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Select a profile image"
                android:textColor="#9C7DA5" />


            <EditText
                android:id="@+id/etName"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etBio"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Bio"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPet_type"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet type:"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPet_breed"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet breed: "
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPet_gender"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet gender:"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etzip"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Zip code: "
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <TextView
                android:id="@+id/tvPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="User Preferences"
                android:textColor="#9C7DA5"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPreference_type"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet type"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPreference_breed"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet breed"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPreference_gender"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Pet gender"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <EditText
                android:id="@+id/etPreference_other"
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:background="@drawable/round_text"
                android:ems="10"
                android:hint="Other"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="#9C7DA5" />

            <Button
                android:id="@+id/btnProfile_save"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Save"
                android:textColor="#9C7DA5" />


            <Button
                android:id="@+id/btnProfile_logout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_text"
                android:backgroundTint="#ADC1FC"
                android:text="Log out"
                android:textColor="#9C7DA5" />

            <TextView
                android:id="@+id/btnBackA"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:clickable="true"
                android:ems="3"
                android:focusable="true"
                android:paddingHorizontal="15dp"
                android:text="Back"
                android:textColor="#A8A8A8"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>