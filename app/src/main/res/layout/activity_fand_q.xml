<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ask_question">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002"
        app:srcCompat="@drawable/pet2" />



    <TextView
        android:id="@+id/tvAccount_Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F&amp;Q"
        android:textColor="#9C7DA5"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.318"
        />


    <EditText
        android:id="@+id/etquestionTitle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/round_text"
        android:drawableRight="@android:drawable/ic_search_category_default"
        android:ems="10"
        android:hint="Enter key words "
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textColorHint="#9C7DA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccount_Info"
        app:layout_constraintVertical_bias="0.767" />

    <Button
        android:id="@+id/etsearchButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_text"
        android:backgroundTint="#ADC1FC"
        android:ems="10"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Search"
        android:textColor="#9C7DA5"
        android:textColorHint="#9C7DA5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccount_Info"
        app:layout_constraintVertical_bias="0.765" />

    <Button
        android:id="@+id/btnq1"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginBottom="376dp"
        android:background="@drawable/round_text"
        android:backgroundTint="#ADC1FC"
        android:ems="13"
        android:text="Q1"
        android:textColor="#9C7DA5"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnq2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/round_text"
        android:backgroundTint="#ADC1FC"
        android:ems="13"
        android:text="Q1"
        android:textColor="#9C7DA5"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Did not find what you wantï¼Ÿ\nDon't worry, search your question here!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnq2"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#9C7DA5"/>

    <Button
        android:id="@+id/btnq3"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/round_text"
        android:backgroundTint="#ADC1FC"
        android:ems="13"
        android:text="Q1"
        android:textColor="#9C7DA5"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnFQ_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        android:clickable="true"
        android:ems="3"
        android:focusable="true"
        android:text="Back"
        android:textColor="#A8A8A8"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnq3" />

</androidx.constraintlayout.widget.ConstraintLayout>